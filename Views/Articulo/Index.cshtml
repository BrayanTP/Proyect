@model IEnumerable<Proyect.Models.articulo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre articulo:
        </th>
        <th>
            Texto articulo:
        </th>
        <th>
            Estado
        </th>
        <th>
            Titulo:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_articulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.texto_articulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Proyect.Controllers.ArticuloController.nombreTitulo(item.idtitulo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idarticulo }) |
            @Html.ActionLink("Details", "Details", new { id=item.idarticulo })
        </td>
    </tr>
}

</table>
