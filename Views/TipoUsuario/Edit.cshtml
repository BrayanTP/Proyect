@model Proyect.Models.tipo_usuario

@{
    ViewBag.Title = "Editar Tipo Usuario";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>tipo_usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idtipo_usuario)

        <div class="form-group">
            <label class="control-label col-md-2" for="nombre_tipo_usuario">Tipo de Usuario: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre_tipo_usuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre_tipo_usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar cambios" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista Tipo de usuarios", "Index")
</div>
